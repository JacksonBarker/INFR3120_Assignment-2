<%- include partials/header.ejs %>
<div class="container px-4 py-5">
  <h2 class="pb-2 border-bottom">Contact Me</h2>
  <main class="py-5">
    <div class="d-flex justify-content-center">
      <form
        action="mailto:jackson.barker@ontariotechu.net"
        method="post"
        enctype="text/plain"
        name="form"
      >
        <div class="row">
          <div class="col-12">
            <label for="name" class="form-label">Your name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              placeholder=""
              value=""
              required
            />
          </div>
          <div class="col-12">
            <label for="email" class="form-label">Your email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder=""
              value=""
              required
            />
          </div>
          <div class="col-12">
            <label for="phone" class="form-label">Your number</label>
            <input
              type="tel"
              class="form-control"
              id="phone"
              placeholder=""
              value=""
              required
            />
          </div>
          <div class="col-12">
            <label for="comments" class="form-label">Comments</label>
            <textarea
              class="form-control"
              id="comments"
              rows="6"
              required
            ></textarea>
          </div>
        </div>
        <hr class="my-4" />

        <button class="btn btn-primary btn-lg" type="submit">Submit</button>
      </form>
    </div>
  </main>
</div>
<%- include partials/footer.ejs %>
